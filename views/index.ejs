<!DOCTYPE html>
<html>
  <%- include('header'); -%>
 <script type="text/javascript">
  $(document).ready(function() {
      $('.select-ingredients-multiple').select2();
  });
 </script>
  <link href="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/css/select2.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/js/select2.min.js"></script>
  <div class="container-fluid" >
      <form class="container-sm" style="margin: 0 auto;" action="/search/ingredients" title="" method="post">
      <div class="form-group">
        <select class="select-ingredients-multiple" name="ingredients" multiple="multiple">
          <%for(let i = 0; i < ingredients.length; i++){%>
             <option value="<%=ingredients[i].id%>"><%=ingredients[i].title%></option>
          <%}%>
        </select>
      </div>
      <div class="form-group">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Найти рецепт</button>
      </div>
      <form>
  </div>
</body>
</html>

